# Service Configuration
PORT=8015
HOST=0.0.0.0
ENVIRONMENT=development

# PayloadCMS Integration (Auto-Movie App)
PAYLOADCMS_API_URL=http://localhost:3010
PAYLOADCMS_API_KEY=your-payloadcms-api-key
