# Service Configuration
PORT=8015
HOST=0.0.0.0
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://story_bible_user:story_bible_password@localhost:5432/story_bible_db

# MCP Brain Service Connection
BRAIN_SERVICE_URL=http://localhost:8002
BRAIN_SERVICE_WS_URL=ws://localhost:8002/mcp

# Authentication
API_KEY_SECRET=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Production Overrides (uncomment for production)
# BRAIN_SERVICE_URL=https://brain.ft.tc
# BRAIN_SERVICE_WS_URL=wss://brain.ft.tc/mcp
# DATABASE_URL=postgresql://story_bible_user:prod_password@prod_host:5432/story_bible_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/story_bible_service.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9015